					<australia>AS</australia>
					<asia>AE,AF,AM,AJ,BG,BA,BX,BT,CK,CH,KT,GG,HK,ID,IS,IN,IO,IZ,IR,JO,JA,KG,CB,KN,KS,KU,KZ,LA,LE,CE,BM,MG,MC,MV,MY,NP,MU,RP,PK,WE,QA,SA,SN,SY,TH,TI,TX,TU,TW,UZ,VM,YM</asia>
					<africa>AO,UV,BY,BN,BC,CG,CT,CF,IV,CM,CV,DJ,AG,EG,WI,ER,ET,GB,GH,GA,GV,EK,PU,KE,CN,LI,LT,LY,MO,MA,ML,MR,MP,MI,MZ,WA,NG,NI,RE,RW,SE,SU,SH,SL,SG,SO,OD,TP,WZ,CD,TO,TS,TZ,UG,MF,SF,ZA,ZI</africa>
				</params>
            </evaluator>
        </prop>
        <prop>
            <title>Country Name</title>
            <code>countryname</code>
            <operators>__opText</operators>
            <evaluator>
                <type>avt.RedirectToolkit.Conditions.RedirectByGeoLocation,avt.RedirectToolkit</type>
                <params>
				</params>
            </evaluator>
        </prop>
        <prop>
            <title>Country Code</title>
            <code>countrycode</code>
            <operators>__opText</operators>
            <evaluator>
                <type>avt.RedirectToolkit.Conditions.RedirectByGeoLocation,avt.RedirectToolkit</type>
                <params></params>
            </evaluator>
        </prop>
        <prop>
            <title>Region Name</title>

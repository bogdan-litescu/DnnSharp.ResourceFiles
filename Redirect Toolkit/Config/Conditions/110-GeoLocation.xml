<?xml version="1.0" encoding="utf-8"?>
<condition>
    <code>geo</code>
    <title>Redirect based on IP Location - geobytes.com</title>
    <help>
        Obtains Geo Location information from <a href="http://geobytes.com">geobytes.com</a>. Note that they offer up to 20 free checks per hours.
        If you exceed this limit you have to purchase their service and fill in the username and password in Redirect Toolkit settings.
    </help>
    <params>
        <param>
            <name>Email</name>
            <type>text</type>
            <help></help>
            <required>false</required>
        </param>
        <param>
            <name>Password</name>
            <type>password</type>
            <help></help>
            <required>false</required>
        </param>
    </params>
    <properties>
		<prop>
            <title>Continent</title>
            <code>continentname</code>
            <operators>__opPickOneFromList</operators>
            <evaluator>
                <type>avt.RedirectToolkit.Conditions.RedirectByGeoLocation,avt.RedirectToolkit</type>
